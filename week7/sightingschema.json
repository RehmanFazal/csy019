{
    "$schema":"http://json-schema.org/draft-07/schema#",
    "title":"Sightings Report",
    "description":"An report of rare animal.",
    "type":"object",
    "properties":{
       "sightings":{
          "type":"array",
          "items":{
             "type":"object",
             "properties":{
                "id":{
                   "type":"integer"
                },
                "animal":{
                   "type":"string"
                },
                "number":{
                   "type":"integer"
                },
                "location":{
                   "type":"string"
                },
                "date":{
                   "type":"string"
                },
                "time":{
                   "type":"string"
                },
                "observer":{
                   "type":"object",
                   "properties":{
                      "name":{
                         "type":"string"
                      },
                      "email":{
                         "type":"string"
                      }
                   }
                },
                "observation":{
                   "type":"string"
                }
             }
          }
       }
    }
 }